<h1>Create Student</h1>

<div>
    <form action="Create" method="post">
        <div class="form-group">
            <label for="ID">ID</label>
            <input type="text" class="form-control" id="ID" name="ID" placeholder="Enter ID">
        </div>
        <div class="form-group">
            <label for="FirstMidName">First MidName</label>
            <input type="text" class="form-control" id="FirstMidName" name="FirstMidName" placeholder="Enter First MidName">
        </div>
        <div class="form-group">
            <label for="LastName">Firts Name</label>
            <input type="text" class="form-control" id="LastName" name="LastName" placeholder="Enter Last Name">
        </div>
        <div class="form-group">
            <label for="Address">Address</label>
            <input type="text" class="form-control" id="Address" name="Address" placeholder="Enter Address">
        </div>
        <div class="form-group">
            <label for="EnrollmentDate">Address</label>
            <input type="date" class="form-control" id="EnrollmentDate" name="EnrollmentDate" placeholder="Enter EnrollmentDate">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    <br>
    @if (ViewData["msg"] != null)
    {
        <div class="alert alert-success" role="alert">
            @ViewData["msg"]
        </div>
    }
</div>