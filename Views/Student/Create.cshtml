@model Myapp.Web.Models.Student
@{
    ViewData["Title"] = "Create Student";
}
<h1>Create Student</h1>

<div>
    <form action="Create" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label for="ID">ID</label>
            <input type="text" class="form-control" id="ID" name="ID" placeholder="Enter ID">
        </div>
        <div class="form-group">
            <label asp-for="FirstMidName">First MidName</label>
            <input asp-for="FirstMidName" class="form-control" placeholder="Enter First MidName">
            <span asp-validation-for="FirstMidName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastName">Firts Name</label>
            <input asp-for="LastName" class="form-control" placeholder="Enter Last Name">
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address">Address</label>
            <input asp-for="Address" class="form-control" placeholder="Enter Address">
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="EnrollmentDate">EnrollmentDate</label>
            <input type="date" class="form-control" id="EnrollmentDate" name="EnrollmentDate" placeholder="Enter EnrollmentDate">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    <br>
    @if (ViewData["msg"] != null)
    {
        <div class="alert alert-success" role="alert">
            @ViewData["msg"]
        </div>
    }
</div>

@section Scripts {
  @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}